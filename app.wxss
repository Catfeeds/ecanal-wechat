/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/*新闻列表样式开始  */

.consultList {
  display: flex;
  width: 90%;
  margin: 0 auto;
  background: #fff;
  border: 2rpx solid #fff;
  border-radius: 10rpx;
  margin-top: 30rpx;
  z-index: 100;
}

/*标题栏  */

.consultTitle {
  /* //超出一行文字自动隐藏 */
  overflow: hidden;
  /* //文字隐藏后添加省略号 */
  text-overflow: ellipsis;
  /* //强制不换行 */
  white-space: nowrap;
  font-family: "黑体";
  font-size: 36rpx;
  color: #000;
  margin-bottom: 20rpx;
  display: block;
}

/*摘要  */

.consultSummary {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  color: #666;
}

.consultMeta {
  width: 320rpx;
}

/*图片样式  */

.consultList .image_savepath {
  width: 180rpx;
  height: 160rpx;
  padding: 20rpx;
  vertical-align: middle;
}

.consultList .consultMeta {
  flex: 1;
  padding-top: 30rpx;
  padding-right: 30rpx;
  font-size: 40rpx;
  position: relative;
}

.a {
  margin-left: 32rpx;
}

/*新闻底部 评论，来源，时间  */

.consultBottom {
  position: absolute;
  bottom: 20rpx;
  font-size: 24rpx;
  display: flex;
  justify-content: space-around;
  color: #999;
}

/*新闻列表样式结束  */

/*评论  */
.commentMain {
  margin-top: 32rpx;
  font-size: 32rpx;
}
.commentTop{
    display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.commentLeft,commentRight{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.commentRight {
  align-items: center;
}
.commentNameTime{
    display: flex;
  flex-direction: column;
  font-size: 34rpx;
}
.commentName{
 padding-left: 32rpx;
}

.commentIcon1{
    width: 42rpx;
  height: 42rpx;
}

.commentIcon{
    padding: 10rpx 0 40rpx 0;
  width: 48rpx;
  height: 48rpx;
}