.container {
  height: 1500rpx;
}

.top-tab {
  width: 750rpx;
  height: 80rpx;
  background: #298de5;
  color: #000;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  z-index: 9999;
  display: flex;
  justify-content: space-around;
  position: fixed;
  top: 0;
}

.toptab.active {
  color: #ffffff;
  border-bottom: solid 2px #ffffff;
}

.placehold {
  font-size: 28rpx;
  padding: 80rpx 0;
}

.page_body {
  padding-top: 80rpx;
  display: flex;
  /*flex: 1;*/
  flex-direction: column;
}

.item {
  display: flex;
  padding: 20rpx 40rpx;
  border-bottom: 2rpx solid #eee;
}

.item .image_savepath {
  width: 200rpx;
  height: 160rpx;
  margin-right: 20rpx;
}

.item .meta {
  flex: 1;
}

.item .meta .title {
  display: block;
  margin-bottom: 71rpx;
}

.item .author, .item .update_time {
  font-size: 30rpx;
  font-weight: bold;
  color: red;
}

.item .update_time {
  margin-left: 30rpx;
}
