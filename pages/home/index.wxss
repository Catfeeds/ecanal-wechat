
.main{
  margin: 0;
  height: 100%;
  width:100%;
  display:flex;
  flex-direction:column;
  font-family: 宋体;
  box-sizing:border-box;
  font-size:16px;
}

.top{
  width: 100%;
  color: white;
  background-color: #e3e3e3;
  height: 400rpx;
}

.weather_data{
  width: 100%;
  display: inline-block;
  position: absolute;
  z-index: 60;
  margin-top: 20rpx; 
}
.weather_top{
  display: block
}
.weather{
  /*//让内容自动撑大盒子*/
  display:inline-block;
  margin-left: 40rpx;
  margin-bottom: 20rpx
}
.weather_desc{
  display: inline-block;
}
.temperature{
  margin-left: 35rpx
}
.pm25{
  border-radius: 20rpx;
  background-color: dodgerblue;
}
.scan_code{
  width: 60rpx;
  height: 50rpx;
  position: absolute;
  right: 20rpx;
  top: 10rpx
}
.search_area{
  margin-top: 140rpx;
  width: 95%;
  margin-left: 18rpx;
  background: rgb(193, 191, 186);
  opacity: 0.9;
  border-radius: 10rpx;
}
.search_text{
  width:72%;
}

.img{
  width: 64rpx;
  background-image: url(../../image/scan.png);
  background-repeat: no-repeat;
  background-size: 64rpx 58rpx;
  height: 58rpx;
   z-index: 60
}
.search{
   display:inline-block;
   /*background: white;*/
   color: #e3e3e3;
}

.menu{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.image{
  width: 32px;
  height: 32px;
  margin: 0 auto;
  margin-bottom: 10rpx;
}
.row{
  text-align: center;
  display: flex;
  flex-direction: column; 
}
.line{
  width: 8rpx;
  height: 150rpx
}
.left_more{
  position: absolute;
  left: 40rpx;
  width: 32rpx;
  height: 32rpx;
}

.homeImg{
  width: 100%;
  height: 280rpx
}
