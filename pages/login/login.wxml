<view class="main" style="height:{{Height}}px">
  <!-- <image src="../../images/bg.png" class="bg"></image> -->
  <view class="logo">
    <image src="../../images/logo.png" class="logoIcon"></image>
    <image src="../../images/logotext.png" class="logoText"></image>
    <view class="form">
      <form bindsubmit="login">
        <image src="../../images/photo.png" class="icon photo"></image>
        <input placeholder="请输入用户名/手机号/邮箱" class="input" placeholder-class="placeholder" name="content" />
        <image src="../../images/pwd.png" class="icon pwd"></image>
        <input placeholder="请输入密码" class="input" type="password" placeholder-class="placeholder" name="password" />
        <button form-type="submit" class="btn">立即登录</button>
      </form>
    </view>
    
  </view>

<view bindtap="register" class="register">快速注册</view>
</view>