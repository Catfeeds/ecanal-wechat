/* pages/login/login.wxss */

.main {
  overflow: hidden;
}

.bg {
  width: 100%;
  height: 100%;
  z-index: 0;
}

.logo {
  display: flex;
  flex-direction: column;
  position: absolute;
  margin-top: 100rpx;
  z-index: 10;
  width: 100%;
}

.logoIcon {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  padding-top: 50rpx;
}

.logoText {
  padding-top: 5%;
  width: 40%;
  height: 80rpx;
  margin: 0 auto;
}

.form {
  padding-top: 85rpx;
  width: 70%;
  margin: 0 auto;
}

.input{
  border: 2rpx #e3e3e3 solid;
  background: #fff;
  border-radius: 20rpx;
  height: 90rpx;
  margin: 30rpx 0;
  padding-left: 72rpx;
}

.placeholder{
  font-size: 28rpx;
}

.btn{
   white-space: 1rem; 
  background: rgb(67, 146, 245);
  color: #fff
}

.icon{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  z-index: 20;
  margin-left: 25rpx;
}

.photo{
margin-top: 8%;
}
.pwd{
  margin-top: 31rpx;
}
.register{
  position: absolute;
  top: 80%;
  right: 122rpx;
  font-size: 27rpx;
  color: rgb(67, 146, 245);
  
}
