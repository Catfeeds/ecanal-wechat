/* pages/news/news.wxss */
@import "../../wxParse/wxParse.wxss";

.main {
  margin: 0;
  padding: 0;
  padding-bottom: 108rpx;
}

.title {
  font-family: "黑体";
  display: flex;
  font-size: 38rpx;
  justify-content: center;
  padding: 30rpx 0;
}

.foot {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.nameTime {
  display: flex;
  flex-direction: column;
  font-size: 34rpx;
}

.icon1 {
  width: 42rpx;
  height: 42rpx;
}

.icon {
  padding: 10rpx 0 40rpx 0;
  width: 48rpx;
  height: 48rpx;
}

.item {
  display: flex;
  flex-direction: row;
}

.likes {
  height: 48rpx;
  line-height: 48rpx;
  padding: 10rpx 0 40rpx 30rpx;
}

.comment {
  margin-top: 32rpx;
  font-size: 32rpx;
}

.top {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.left, .right {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.right {
  align-items: center;
}

.user_phone {
  width: 32rpx;
  height: 32rpx;
}

.right_content {
  display: flex;
  flex-direction: row;
  padding-left: 32rpx;
}

.name {
  padding-left: 32rpx;
}

.comment_content {
  padding-left: 125rpx;
}

.inputComment {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0px;
  background: rgba(0, 0, 0, 0.4);
  overflow: hidden;
}

.form {
  width: 100%;
  background: #e3e3e3;
  height: 25%;
  margin-top: 50%;
}

.textarea {
  width: 90%;
  margin: 0 auto;
  background: #fff;
  height: 160rpx;
  margin-top: 20rpx;
  padding: 20rpx;
}

.btn {
  width: 120rpx;
  height: 64rpx;
  line-height: 64rpx;
  background: #e3e3e3;
  font-size: 32rpx;
  padding: 0;
  margin: 0;
  top: 15rpx;
}

.submint {
  float: right;
  right: 50rpx;
}

.cancel {
  float: left;
  left: 50rpx;
}
