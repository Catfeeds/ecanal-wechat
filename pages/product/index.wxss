.container{
  height: 1500rpx;
}
.top-tab{
  width: 750rpx;
  height: 100rpx;
  background: #298DE5;
  color: #8CCEFD;
  font-size: 28rpx;
  line-height: 100rpx;
  box-shadow: 0 2px 2px #bebebe;
  margin: 0 0 8rpx 0;
  z-index: 9999;
  display: flex;
 justify-content: space-around
 
}

.toptab.cur-ch-tab{
  color: #ffffff;
  border-bottom: solid 2px #ffffff;
}
.activity{
  width: 750rpx;
  height: 375rpx;
}
.activity image{
  width: 750rpx;
  height: 375rpx;
}
.placehold{
  font-size: 28rpx;
  padding: 80rpx 0;
}

.page_body{
  display: flex;
  flex: 1;
  flex-direction: column
}
.item{
  display: flex;
  padding:  20rpx 40rpx;
  border-bottom: 2rpx solid #eee;
}
.item .image_savepath{
  width: 200rpx;
  height: 200rpx;
  margin-right: 20rpx;
}
.item .meta{
  flex: 1;
}
.item .meta .title{
  display: block;
  margin-bottom: 71rpx;  
}

.item .author,.item .update_time{
  font-size: 30rpx;
  font-weight: bold;
  color: red;
}
