.main {
  overflow: hidden;
}

.bg {
  width: 100%;
  height: 100%;
  z-index: 0;
}

.logo {
  display: flex;
  flex-direction: column;
  position: absolute;
  top: 0;
  z-index: 10;
  width: 100%;
}

.logoIcon {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  padding-top: 50rpx;
}

.logoText {
  padding-top: 5%;
  width: 40%;
  height: 80rpx;
  margin: 0 auto;
}

.form {
  padding-top: 20rpx;
  width: 70%;
  margin: 0 auto;
}

.input {
  border: 2rpx #e3e3e3 solid;
  background: #fff;
  border-radius: 20rpx;
  height: 90rpx;
  margin: 30rpx 0;
  padding-left: 72rpx;
}

.placeholder {
  font-size: 28rpx;
}

.btn {
  white-space: 1rem;
  background: rgb(67, 146, 245);
  color: #fff;
  margin-top: 70rpx
}

.icon {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  z-index: 20;
  margin-left: 25rpx;
}

.photo {
  margin-top: 4%;
}

.pwd {
  margin-top: 31rpx;
}

.phoneCode {
  width: 300rpx;
}

.btn1 {
  width: 140rpx;
  position: absolute;
  right: 115rpx;
  font-size: 28rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: rgb(67, 146, 245);
  color: #ffffff;
}
