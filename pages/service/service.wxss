/* pages/service/service.wxss */

.titles {
  height: 280rpx;
  width: 750rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.title {
  width: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  color: #96cdfc;
}

.title-info {
  padding-bottom: 36rpx;
  border-bottom: 1px solid #fff;
}

.title image {
  width: 200rpx;
  height: 200rpx;
}

.title-selected {
  color: #96cdfc;
  border-bottom: 1px solid #139ad5;
}

.page {
  width: 100%;
  height: 137rpx;
  display: flex;
  align-items: center; /*垂直居中*/
  justify-content: space-between;
  color: white;
  border-top: 1px solid #dcdcdc;
}

.page:last-child {
  border-bottom: 1px solid #dcdcdc;
}

.page-left {
  display: flex;
  align-items: center;
  padding-left: 18rpx;
}

.page-left image {
  width: 200rpx;
  height: 200rpx;
}

.page-left text {
  color: #626262;
  margin-left: -18px;
}

.page-right {
  width: 27px;
  height: 48px;
  margin-right: 40px;
}
